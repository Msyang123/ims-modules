<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhiot.ims.rbac.mapper.MngrAuthOperationMapper">

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="BaseResultMap"
        type="com.lhiot.ims.rbac.domain.MngrAuthOperation" >
        <id column="id" property="id"/>
        <result column="menu_id" property="menuId" />
        <result column="name" property="name" />
        <result column="ant_url" property="antUrl" />
        <result column="type" property="type" />
    </resultMap>

    <!-- base查询字段  -->
    <sql id="Base_Column_List" >
        <trim suffixOverrides="," >
            id,
            menu_id,
            name,
            ant_url,
            type,
        </trim>
    </sql>

    <!--新增功能操作-->
    <insert id="create" parameterType="com.lhiot.ims.rbac.domain.MngrAuthOperation" useGeneratedKeys="true" keyProperty="id">
        insert into mngr_auth_operation
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                id,
            </if>
            <if test="menuId != null ">
                menu_id,
            </if>
            <if test="name != null ">
                name,
            </if>
            <if test="antUrl != null ">
                ant_url,
            </if>
            <if test="type != null ">
                type,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                #{id},
            </if>
            <if test="menuId != null ">
                #{menuId},
            </if>
            <if test="name != null ">
                #{name},
            </if>
            <if test="antUrl != null ">
                #{antUrl},
            </if>
            <if test="type != null ">
                #{type},
            </if>
        </trim>
    </insert>

    <!--根据id修改功能操作-->
    <update id="updateById" parameterType="com.lhiot.ims.rbac.domain.MngrAuthOperation">
        update mngr_auth_operation
        <set>
            <if test="id != null ">
                id = #{id},
            </if>
            <if test="menuId != null ">
                menu_id = #{menuId},
            </if>
            <if test="name != null ">
                name = #{name},
            </if>
            <if test="antUrl != null ">
                ant_url = #{antUrl},
            </if>
            <if test="type != null ">
                type = #{type},
            </if>
        </set>
        where id=#{id}
    </update>

    <!--根据ids删除功能操作-->
    <delete id="deleteByIds" parameterType="java.util.List">
        delete from mngr_auth_operation where id in
        <foreach collection="list" item="item" open="("
            separator="," close=")">
            #{item}
        </foreach>
    </delete>


    <!-- 根据id查找功能操作 -->
	<select id="selectById" resultMap="BaseResultMap"
		parameterType="long"> select <include refid="Base_Column_List" />
		from mngr_auth_operation where id = #{id}
	</select>


    <!-- base where条件  -->
    <sql id="Base_Where_Condition" >
        <where>
            <if test="id != null ">
                and id = #{id}
            </if>
            <if test="menuId != null ">
                and menu_id = #{menuId}
            </if>
            <if test="name != null ">
                and name = #{name}
            </if>
            <if test="antUrl != null ">
                and ant_url = #{antUrl}
            </if>
            <if test="type != null ">
                and type = #{type}
            </if>
        </where>
    </sql>


    <!--查询功能操作列表-->
     <select id="pageMngrAuthOperations" resultMap="BaseResultMap"
        parameterType="com.lhiot.ims.rbac.domain.MngrAuthOperation">
	        select <include refid="Base_Column_List" />
	        from mngr_auth_operation
	        <include refid="Base_Where_Condition" />
	        <include refid="common.pager" />
    </select>

    <!--查询功能操作总记录-->
    <select id="pageMngrAuthOperationCounts" resultType="long"
        parameterType="com.lhiot.ims.rbac.domain.MngrAuthOperation">
            select count(1)
            from mngr_auth_operation
            <include refid="Base_Where_Condition" />
    </select>

</mapper>