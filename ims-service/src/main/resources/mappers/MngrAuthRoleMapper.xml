<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhiot.ims.rbac.mapper.MngrAuthRoleMapper">

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="BaseResultMap"
        type="com.lhiot.ims.rbac.domain.MngrAuthRole" >
        <id column="id" property="id"/>
        <result column="parent_id" property="parentId" />
        <result column="name" property="name" />
        <result column="status" property="status" />
    </resultMap>

    <!-- base查询字段  -->
    <sql id="Base_Column_List" >
        <trim suffixOverrides="," >
            id,
            parent_id,
            name,
            status,
        </trim>
    </sql>

    <!--新增角色-->
    <insert id="create" parameterType="com.lhiot.ims.rbac.domain.MngrAuthRole" useGeneratedKeys="true" keyProperty="id">
        insert into mngr_auth_role
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                id,
            </if>
            <if test="parentId != null ">
                parent_id,
            </if>
            <if test="name != null ">
                name,
            </if>
            <if test="status != null ">
                status,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                #{id},
            </if>
            <if test="parentId != null ">
                #{parentId},
            </if>
            <if test="name != null ">
                #{name},
            </if>
            <if test="status != null ">
                #{status},
            </if>
        </trim>
    </insert>

    <!--根据id修改角色-->
    <update id="updateById" parameterType="com.lhiot.ims.rbac.domain.MngrAuthRole">
        update mngr_auth_role
        <set>
            <if test="id != null ">
                id = #{id},
            </if>
            <if test="parentId != null ">
                parent_id = #{parentId},
            </if>
            <if test="name != null ">
                name = #{name},
            </if>
            <if test="status != null ">
                status = #{status},
            </if>
        </set>
        where id=#{id}
    </update>

    <!--根据ids删除角色-->
    <delete id="deleteByIds" parameterType="java.util.List">
        delete from mngr_auth_role where id in
        <foreach collection="list" item="item" open="("
            separator="," close=")">
            #{item}
        </foreach>
    </delete>


    <!-- 根据id查找角色 -->
	<select id="selectById" resultMap="BaseResultMap"
		parameterType="long"> select <include refid="Base_Column_List" />
		from mngr_auth_role where id = #{id}
	</select>


    <!-- base where条件  -->
    <sql id="Base_Where_Condition" >
        <where>
            <if test="id != null ">
                and id = #{id}
            </if>
            <if test="parentId != null ">
                and parent_id = #{parentId}
            </if>
            <if test="name != null ">
                and name = #{name}
            </if>
            <if test="status != null ">
                and status = #{status}
            </if>
        </where>
    </sql>


    <!--查询角色列表-->
     <select id="pageMngrAuthRoles" resultMap="BaseResultMap"
        parameterType="com.lhiot.ims.rbac.domain.MngrAuthRole">
	        select <include refid="Base_Column_List" />
	        from mngr_auth_role
	        <include refid="Base_Where_Condition" />
	        <include refid="common.pager" />
    </select>

    <!--查询角色总记录-->
    <select id="pageMngrAuthRoleCounts" resultType="long"
        parameterType="com.lhiot.ims.rbac.domain.MngrAuthRole">
            select count(1)
            from mngr_auth_role
            <include refid="Base_Where_Condition" />
    </select>

</mapper>