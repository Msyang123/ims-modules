<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lhiot.ims.rbac.mapper.RelationRoleOperationMapper">

    <!-- 数据库字段对象关系映射 -->
    <resultMap id="BaseResultMap"
        type="com.lhiot.ims.rbac.domain.RelationRoleOperation" >
        <id column="id" property="id"/>
        <result column="role_id" property="roleId" />
        <result column="operation_id" property="operationId" />
    </resultMap>

    <!-- base查询字段  -->
    <sql id="Base_Column_List" >
        <trim suffixOverrides="," >
            id,
            role_id,
            operation_id,
        </trim>
    </sql>

    <!--新增角色与操作关联-->
    <insert id="create" parameterType="com.lhiot.ims.rbac.domain.RelationRoleOperation" useGeneratedKeys="true" keyProperty="id">
        insert into relation_role_operation
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                id,
            </if>
            <if test="roleId != null ">
                role_id,
            </if>
            <if test="operationId != null ">
                operation_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="id != null ">
                #{id},
            </if>
            <if test="roleId != null ">
                #{roleId},
            </if>
            <if test="operationId != null ">
                #{operationId},
            </if>
        </trim>
    </insert>

    <!--根据id修改角色与操作关联-->
    <update id="updateById" parameterType="com.lhiot.ims.rbac.domain.RelationRoleOperation">
        update relation_role_operation
        <set>
            <if test="id != null ">
                id = #{id},
            </if>
            <if test="roleId != null ">
                role_id = #{roleId},
            </if>
            <if test="operationId != null ">
                operation_id = #{operationId},
            </if>
        </set>
        where id=#{id}
    </update>

    <!--根据ids删除角色与操作关联-->
    <delete id="deleteByIds" parameterType="java.util.List">
        delete from relation_role_operation where id in
        <foreach collection="list" item="item" open="("
            separator="," close=")">
            #{item}
        </foreach>
    </delete>


    <!-- 根据id查找角色与操作关联 -->
	<select id="selectById" resultMap="BaseResultMap"
		parameterType="long"> select <include refid="Base_Column_List" />
		from relation_role_operation where id = #{id}
	</select>


    <!-- base where条件  -->
    <sql id="Base_Where_Condition" >
        <where>
            <if test="id != null ">
                and id = #{id}
            </if>
            <if test="roleId != null ">
                and role_id = #{roleId}
            </if>
            <if test="operationId != null ">
                and operation_id = #{operationId}
            </if>
        </where>
    </sql>


    <!--查询角色与操作关联列表-->
     <select id="pageRelationRoleOperations" resultMap="BaseResultMap"
        parameterType="com.lhiot.ims.rbac.domain.RelationRoleOperation">
	        select <include refid="Base_Column_List" />
	        from relation_role_operation
	        <include refid="Base_Where_Condition" />
	        <include refid="common.pager" />
    </select>

    <!--查询角色与操作关联总记录-->
    <select id="pageRelationRoleOperationCounts" resultType="long"
        parameterType="com.lhiot.ims.rbac.domain.RelationRoleOperation">
            select count(1)
            from relation_role_operation
            <include refid="Base_Where_Condition" />
    </select>

</mapper>